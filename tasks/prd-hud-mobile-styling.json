    {
      "id": "HUD-M01",
      "title": "HUD Container - Match EFE Header Toolbar Styling",
      "description": "Update HUD container toolbar to exactly match EFE container toolbar styling. Mobile-focused.",
      "exactChanges": {
        "file": "src/app/pages/hud/hud-container/hud-container.page.scss",
        "cssProperties": {
          "ion-toolbar": {
            "--background": "var(--ion-color-primary)",
            "--color": "white",
            "--min-height": "56px",
            "--border-width": "1px 0 0 0",
            "--border-color": "#e0e0e0"
          },
          "ion-title": {
            "position": "absolute !important",
            "top": "50% !important",
            "transform": "translateY(-50%) !important",
            "text-align": "center !important"
          },
          "ion-button": {
            "height": "56px",
            "--ripple-color": "transparent !important",
            "--background-hover": "transparent !important",
            "--color": "white !important"
          }
        }
      },
      "acceptanceCriteria": [
        "Toolbar height is exactly 56px",
        "Title is centered vertically using absolute positioning",
        "Buttons don't shift/move on tap (no ripple effect)",
        "White icons/text on primary background"
      ],
      "priority": 1,
      "passes": false,
      "dependsOn": []
    },
